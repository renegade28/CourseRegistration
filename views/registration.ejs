<body>
    <!-- Header-->
    <header id="header">
        <nav>
            <div class="container">
                <div class="text-center">
                    <a href="/" class="nav-brand text-dark">Student Registration</a>
                    
                </div>
            </div>
        </nav>
    </header>


    <!-- Header-->

    <main id="site-main">
        <div class="container">
    
            <form action='/api/student' method='POST' > 
                <div class="new_slot">
                    <div class="form-group">
                        <label for="name" class="text-light">Name:</label>
                        <input type="text"  name="name" value="" placeholder="">
            
                    </div>
            
                    <div class="form-group">
                        <label for="email" class="text-light">Email:</label>
                        <input type="text"  name="email" value="" placeholder="Example@gmail.com">
            
                    </div>
                    <div class="form-group">
                        <label for="password" class="text-light">Password:</label>
                        <input type="password"  name="password" value="" placeholder="*******">
            
                    </div>
                    <div class="form-group">
                        <label for="roll" class="text-light">Roll:</label>
                        <input type="text"  name="roll" value="" placeholder="">
            
                    </div>
                    <div class="form-group">
                        <label for="roll" class="text-light">Department:</label>
                        <input type="text"  name="department" value="" placeholder="CSE">
            
                    </div>
                    <div class="form-group">
                        <label for="carmodel" class="text-light">Session</label>
                        <input type="text"  name="year" value="" placeholder="">
            
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Register</button>
                    </div>
                </div>
            </form>
    
    
    
    
        
     </div>
     </main>
